{% schema %}
{
  "name": "Newsletter (Custom)",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Be the first to hear the news!"
    },
    {
      "type": "text",
      "id": "description_text",
      "label": "Description Text",
      "default": "Subscribe to our mailing list for updates and launches."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Subscribe"
    },
    {
      "type": "range",
      "id": "column_width",
      "label": "Column Width (%)",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button background color",
      "default": "#4f46e5"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "font_picker",
      "id": "font_family",
      "label": "Text font",
      "default": "helvetica_n4"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Text size (px)",
      "min": 12,
      "max": 30,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading size (px)",
      "min": 14,
      "max": 40,
      "step": 1,
      "default": 22
    }
  ],
  "presets": [
    {
      "name": "Newsletter Signup"
    }
  ]
}
{% endschema %}
