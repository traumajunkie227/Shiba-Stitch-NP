{% if customer %}
  {% if customer.tags contains 'wholesale' %}
    <!-- Content visible to wholesale customers -->
    <h1>Welcome, Wholesale Customer</h1>
    <p>This page is exclusive to our wholesale customers.</p>
    
    <!-- Add any generic sections below using section tags -->
    {% section 'wholesale-content' %}

  {% else %}
    <!-- Content for non-wholesale customers -->
    <h1>Access Denied</h1>
    <p>You must be a wholesale customer to view this page. Please log in with your wholesale account.</p>
  {% endif %}
{% else %}
  <!-- Content for users who are not logged in -->
  <h1>Login Required</h1>
  <p>You need to log in to access this page. Please <a href="/account/login">log in</a> first.</p>
{% endif %}
