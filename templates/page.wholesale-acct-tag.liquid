{% comment %}
  Template: page.wholesale-acct-tag.liquid
  Visible only to customers tagged 'wholesale'.
{% endcomment %}

{% if customer and customer.tags contains 'wholesale' %}
  {% section 'wholesale-restricted' %}
{% else %}
  {% layout none %}
  <script>
    /* Send non-wholesalers to login, then back here */
    window.location = '/account/login?return_url=' + encodeURIComponent(request.path);
  </script>
{% endif %}
