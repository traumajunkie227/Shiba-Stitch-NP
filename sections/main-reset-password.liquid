{% comment %}
  Main Reset Password Section
  –– Allows adjusting heading size & spacing plus top/bottom padding
{% endcomment %}

{%- style -%}
/* Section wrapper padding */
.main-reset-password-section {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}

/* Heading style */
.main-reset-password-section__heading {
  font-size: {{ section.settings.heading_font_size }}px !important;
  margin-bottom: {{ section.settings.heading_margin_bottom }}px !important;
}
{%- endstyle -%}

<div class="main-reset-password-section">
  <h2 class="main-reset-password-section__heading">
    {{ 'customer.reset_password.title' | t }}
  </h2>

  {% form 'customer_reset_password' %}
    <div class="FormItem">
      <label for="RecoverEmail">{{ 'customer.reset_password.email' | t }}</label>
      <input type="email" name="email" id="RecoverEmail" class="Input" required autofocus>
    </div>

    <button type="submit" class="Button">
      {{ 'customer.reset_password.submit' | t }}
    </button>
  {% endform %}
</div>

{% schema %}
{
  "name": "main-reset-password",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading font size (px)",
      "min": 16,
      "max": 72,
      "step": 1,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "heading_margin_bottom",
      "label": "Space below heading (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Main Reset Password"
    }
  ]
}
{% endschema %}
