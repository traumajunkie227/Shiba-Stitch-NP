{% comment %}
  Main Login Section
  –– Allows adjusting heading size & spacing plus top/bottom padding
{% endcomment %}

{%- style -%}
/* Section wrapper padding */
.main-login-section {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}

/* Heading style */
.main-login-section__heading {
  font-size: {{ section.settings.heading_font_size }}px !important;
  margin-bottom: {{ section.settings.heading_margin_bottom }}px !important;
}
{%- endstyle -%}

<div class="main-login-section">
  <h2 class="main-login-section__heading">
    {{ 'customer.login.title' | t }}
  </h2>

  {% form 'customer_login', customer_login %}
    <div class="FormItem">
      <label for="CustomerEmail">{{ 'customer.login.email' | t }}</label>
      <input type="email" name="customer[email]" id="CustomerEmail" class="Input" required autofocus>
    </div>

    <div class="FormItem">
      <label for="CustomerPassword">{{ 'customer.login.password' | t }}</label>
      <input type="password" name="customer[password]" id="CustomerPassword" class="Input" required>
    </div>

    <button type="submit" class="Button">{{ 'customer.login.submit' | t }}</button>

    {% if section.settings.enable_shop_login_button %}
      <div class="ShopLoginButton">
        {% render 'shopify_login_button' %}
      </div>
    {% endif %}
  {% endform %}
</div>

{% schema %}
{
  "name": "main-login",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_shop_login_button",
      "label": "Enable shop login button",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading font size (px)",
      "min": 16,
      "max": 72,
      "step": 1,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "heading_margin_bottom",
      "label": "Space below heading (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Main Login"
    }
  ]
}
{% endschema %}



